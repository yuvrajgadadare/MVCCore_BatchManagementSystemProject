
@{
    ViewBag.Title = "Topic_wise_contents";
    Layout = "~/Views/Shared/eLearningLayout.cshtml";
}
<div class="row">
    <div class="col-md-2">
        <ul class="list-group w-50">
            @foreach (var item in ViewBag.topics)
            {
                <li class="list-group-item"><span style="font-size:small"><a href="/ELearning/Content/@item.content_id">@item.content_name</a></span></li>
            }

        </ul>
    </div>
    <div class="col-md-10" style="width:100%;border:1px solid gray;text-align:justify">
        @*<embed src="~/ppts/Angular Tutorial.pdf#toolbar=0" style="width: 100%; height: 100vh " />*@

    </div>
</div>
